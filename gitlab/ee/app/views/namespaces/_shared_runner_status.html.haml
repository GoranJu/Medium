- namespace = local_assigns.fetch(:namespace)
- minutes_usage = namespace.ci_minutes_usage
- list_item_classes = '!gl-grid md:gl-grid-cols-3 gl-gap-x-3'
- minutes_usage_presenter = Ci::Minutes::UsagePresenter.new(minutes_usage)

- if minutes_usage_presenter.display_shared_runners_data?
  %li{ class: list_item_classes }
    %span.gl-text-subtle= _('Compute quota:')
    .gl-col-span-2
      %strong
        = ci_minutes_report(minutes_usage_presenter.monthly_minutes_report)
        = link_to sprite_icon('question-o', css_class: 'gl-fill-icon-info'), help_page_path('ci/pipelines/compute_minutes.md'), target: '_blank', rel: 'noopener noreferrer'
