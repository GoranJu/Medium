- breadcrumb_title _("Push rules")
- page_title _("Push rules")
- add_page_specific_style 'page_bundles/settings'

= render ::Layouts::SettingsBlockComponent.new(_('Push rules'),
  button_options: { data: { event_tracking_load: 'true', event_tracking: 'view_admin_push_rule_pageload' } },
  id: 'js-push-rule-settings',
  expanded: expanded_by_default?) do |c|
  - c.with_description do
    = _('Rules that define what git pushes are accepted for a project. All newly created projects will use these settings.')
  - c.with_body do
    = render 'push_rules'

= render 'merge_request_approvals'
